{
  "root": true,
  "extends": ["@react-native-community", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false
      }
    ],
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "semi": 0,
    "react/react-in-jsx-scope": 0
  },
  "overrides": [
    {
      "files": ["node_modules"],
      "excludedFiles": ["*.js"]
    }
  ]
}
